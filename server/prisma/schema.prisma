// Prisma schema (SQLite) initial minimal models

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/game.db"
}

model Player {
  id         String   @id @default(cuid())
  name       String   @unique
  roomId     String
  stats      Json
  inventory  Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Room {
  id          String  @id
  name        String
  description String
  exits       Json    // { n: "roomId", s: ... }
  staticFlags Json    // { safe: true }
}

model Mob {
  id           String  @id @default(cuid())
  name         String
  baseStats    Json    // { hp, maxHp, atk, def, speed }
  aiType       String  @default("wander") // wander, guard, aggressive, etc.
  respawnMs    Int     @default(30000) // respawn time in milliseconds
  description  String  @default("")
  roomId       String? // which room this mob spawns in
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model WorldMeta {
  key   String @id
  value Json
}
